{
	"name": "curso-de-react-js-2023",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite --host",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"start": "tsc && vite build && vite preview",
		"prepare": "husky",
		"lint": "eslint ./**/*.{js,jsx,mjs,cjs,ts,tsx,mts,cts}",
		"lint:fix": "eslint --fix ./**/*.{js,jsx,mjs,cjs,ts,tsx,mts,cts}",
		"lint-html": "prettier ./**/*.html --check  --ignore-path .gitignore",
		"lint-html:fix": "prettier ./**/*.html --write  --ignore-path .gitignore",
		"lint-md": "markdownlint-cli2 **/*.md !node_modules",
		"lint-md:fix": "markdownlint-cli2 --fix **/*.md !node_modules",
		"stylelint": "stylelint ./**/*.{css,scss}",
		"stylelint:fix": "stylelint --fix ./**/*.{css,scss}",
		"test:e2e": "playwright test",
		"test:performance": "lighthouse http://localhost:4173/ --view"
	},
	"dependencies": {
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"uninstall": "^0.0.0"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.9.1",
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@fullhuman/postcss-purgecss": "^6.0.0",
		"@playwright/test": "^1.45.1",
		"@stylistic/eslint-plugin": "^2.1.0",
		"@types/node": "^20.14.9",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@typescript-eslint/eslint-plugin": "^7.10.0",
		"@typescript-eslint/parser": "^7.10.0",
		"@vitejs/plugin-react": "^4.3.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-check-file": "^2.8.0",
		"eslint-plugin-editorconfig": "^4.0.3",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsdoc": "^48.2.6",
		"eslint-plugin-playwright": "^1.6.2",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-react": "^7.34.1",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-react-refresh": "^0.4.7",
		"eslint-plugin-simple-import-sort": "^12.1.0",
		"eslint-plugin-sort-class-members": "^1.20.0",
		"eslint-plugin-tsdoc": "^0.2.17",
		"eslint-plugin-unused-imports": "^3.2.0",
		"husky": "^9.0.11",
		"markdownlint-cli2": "^0.13.0",
		"prettier": "^3.2.5",
		"react-ga4": "^2.1.0",
		"stylelint": "^16.6.0",
		"stylelint-config-standard": "^36.0.0",
		"stylelint-order": "^6.0.4",
		"stylelint-prettier": "^5.0.0",
		"typescript": "^5.4.5",
		"vite": "^5.2.0",
		"vite-plugin-purgecss-updated-v5": "^1.2.1",
		"web-vitals": "^4.2.1"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
